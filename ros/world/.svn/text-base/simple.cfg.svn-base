# Desc: Player  configuration file 
# Author:  Miroslav kulich
# Date: 20 September 2010


# load the Stage plugin simulation driver
driver
(		
  name "stage"
  provides [ "simulation:0" ]
  plugin "stageplugin"

  # load the named file into the simulator
  worldfile "arena.world"
)

# Create a Stage driver and attach position2d and laser interfaces 
# to the model "r0"
driver
( 
  name "stage"
  provides [ "position2d:0" "laser:0" "minedetector:0"]
  model "r0" 
)


driver
(
  name "snd"
  provides ["position2d:1"]
  requires ["input:::position2d:0" "output:::position2d:0" "laser:0"]
)

driver
(
  name "stage"
  provides [  "graphics2d:0" "bitmap:0"  ]
  model "grid"
  alwayson 1
)
